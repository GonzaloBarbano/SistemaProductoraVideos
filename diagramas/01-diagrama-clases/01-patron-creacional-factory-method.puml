@startuml
title Patrón Creacional - Factory Method (Sistema de Notificaciones)

'==========================
'     PRODUCTO (INTERFAZ)
'==========================

interface Notificacion {
    + enviar() : void
}

' El producto ahora recibe información necesaria
class DatosNotificacion {
    - mensaje : String
    - destinatario : Usuario
}

'==========================
'  PRODUCTOS CONCRETOS
'==========================

class EmailNotificacion {
    - datos : DatosNotificacion
    + EmailNotificacion(datos:DatosNotificacion)
    + enviar() : void
}

class PushNotificacion {
    - datos : DatosNotificacion
    + PushNotificacion(datos:DatosNotificacion)
    + enviar() : void
}

class NotificacionInterna {
    - datos : DatosNotificacion
    + NotificacionInterna(datos:DatosNotificacion)
    + enviar() : void
}

class WhatsAppNotificacion {
    - datos : DatosNotificacion
    + WhatsAppNotificacion(datos:DatosNotificacion)
    + enviar() : void
}

Notificacion <|.. EmailNotificacion
Notificacion <|.. PushNotificacion
Notificacion <|.. NotificacionInterna
Notificacion <|.. WhatsAppNotificacion

'==========================
'    CREATOR ABSTRACTO
'==========================

abstract class NotificacionCreator {
    + crearNotificacion(datos:DatosNotificacion) : Notificacion
    + procesarEnvio(datos:DatosNotificacion) : void
}

NotificacionCreator --> Notificacion : crea >

'==========================
'     CREADORES CONCRETOS
'==========================

class EmailNotificacionCreator {
    + crearNotificacion(datos:DatosNotificacion) : Notificacion
}

class PushNotificacionCreator {
    + crearNotificacion(datos:DatosNotificacion) : Notificacion
}

class NotificacionInternaCreator {
    + crearNotificacion(datos:DatosNotificacion) : Notificacion
}

class WhatsAppNotificacionCreator {
    + crearNotificacion(datos:DatosNotificacion) : Notificacion
}

NotificacionCreator <|-- EmailNotificacionCreator
NotificacionCreator <|-- PushNotificacionCreator
NotificacionCreator <|-- NotificacionInternaCreator
NotificacionCreator <|-- WhatsAppNotificacionCreator

@enduml
